<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.baymax.android.tipsview.samples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ShowLeftTipsPopupActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ShowTopTipsPopupActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShowRightTipsPopupActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShowBottomTipsPopupActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>